<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="1dp"
        android:fontFamily="@font/allerregular"
        android:text="@string/permissions"
        android:textAllCaps="false"
        android:textColor="@color/text_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/admindot"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:tint="@color/green"
        android:src="@mipmap/moon"
        app:layout_constraintEnd_toStartOf="@+id/admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerregular"
        android:text="Admin"
        android:textColor="@color/text_main"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/admindot"
        app:layout_constraintTop_toBottomOf="@+id/url"
        android:layout_marginLeft="4dp" />
    <ImageView
        android:id="@+id/pushdot"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:tint="@color/green"
        android:src="@mipmap/moon"
        app:layout_constraintEnd_toStartOf="@+id/push"
        app:layout_constraintStart_toStartOf="@id/admin"
        app:layout_constraintTop_toBottomOf="@id/url"
        android:layout_marginLeft="55dp" />
    <TextView
        android:id="@+id/push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerregular"
        android:text="Push"
        android:textColor="@color/text_main"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/pushdot"
        app:layout_constraintTop_toBottomOf="@+id/url"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/pulldot"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:tint="@color/green"
        android:src="@mipmap/moon"
        app:layout_constraintEnd_toStartOf="@+id/pull"
        app:layout_constraintStart_toStartOf="@id/push"
        app:layout_constraintTop_toBottomOf="@id/url"
        android:layout_marginLeft="55dp" />
    <TextView
        android:id="@+id/pull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerregular"
        android:text="Pull"
        android:textColor="@color/text_main"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/pulldot"
        app:layout_constraintTop_toBottomOf="@+id/url"
        android:layout_marginLeft="4dp" />

    <View
        android:id="@+id/seperator_alt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shadow"
        app:layout_constraintTop_toBottomOf="@+id/admindot"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>